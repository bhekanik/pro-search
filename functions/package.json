{
	"name": "functions",
	"scripts": {
		"lint": "prettier --ignore-path .gitignore --write --plugin-search-dir=. . && eslint --ignore-path .gitignore --fix --ext .js,.ts .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"build": "tsc",
		"serve": "npm run build && firebase emulators:start --only functions",
