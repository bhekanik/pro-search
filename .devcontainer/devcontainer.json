// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.209.6/containers/javascript-node
{
	"name": "Node.js",
	"build": {
		"dockerfile": "Dockerfile",
		// Update 'VARIANT' to pick a Node version: 16, 14, 12.
		// Append -bullseye or -buster to pin to an OS version.
		// Use -bullseye variants on local arm64/Apple Silicon.
		"args": { "VARIANT": "14" }
	},

	// Set *default* container specific settings.json values on container create.
	"settings": {
		// workbench
		"workbench.settings.editor": "json",
		"workbench.editor.highlightModifiedTabs": true,
		"workbench.editor.tabSizing": "shrink",
		// editor
		"editor.suggestSelection": "first",
		"editor.fontFamily": "'IBM Plex Mono Medium', 'Fira Code Medium', Consolas, 'Courier New', monospace",
		"editor.fontSize": 16,
		"editor.fontLigatures": false,
		"editor.mouseWheelZoom": true,
		"editor.wordWrap": "off",
		"editor.cursorWidth": 5,
		"editor.cursorSurroundingLines": 8,
		"editor.cursorBlinking": "phase",
		"editor.cursorSmoothCaretAnimation": true,
		"editor.cursorStyle": "line",
		"editor.smoothScrolling": true,
		"editor.tabSize": 2,
		"editor.accessibilitySupport": "off",
		"editor.formatOnSave": true,
		"editor.bracketPairColorization.enabled": true,
		"editor.suggest.preview": true,
		"editor.codeActionsOnSave": {
			"source.fixAll": true,
			"source.organizeImports": true
		},
		"editor.semanticTokenColorCustomizations": {
			"enabled": true,
			"rules": {}
		},
		"editor.wordWrapColumn": 80,
		// eslint
		"eslint.format.enable": true,
		"eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
		// other
		"html.format.enable": true,
		"html.format.preserveNewLines": true,
		"files.trimTrailingWhitespace": true,
		"git.autofetch": true,
		"typescript.updateImportsOnFileMove.enabled": "always",
		"javascript.updateImportsOnFileMove.enabled": "always",
		"vsicons.dontShowNewVersionMessage": true,
		"scm.alwaysShowRepositories": true,
		"editor.renderWhitespace": "all",
		"cSpell.userWords": ["Bhekani", "ipad", "iphone", "Khumalo", "macbook", "rerenders", "VITE"],
		"editor.insertSpaces": false,
		"editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
		"vscode-edge-devtools.mirrorEdits": true,
		"svelte.enable-ts-plugin": true,
		"editor.inlineSuggest.enabled": true,
		"github.copilot.enable": {
			"*": true,
			"yaml": false,
			"plaintext": false,
			"markdown": true
		}
	},

	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"dbaeumer.vscode-eslint",
		"formulahendry.auto-close-tag",
		"formulahendry.auto-rename-tag",
		"mikestead.dotenv",
		"wayou.vscode-todo-highlight",
		"streetsidesoftware.code-spell-checker",
		"vivaxy.vscode-conventional-commits",
		"sleistner.vscode-fileutils",
		"graphql.vscode-graphql",
		"orta.vscode-jest",
		"christian-kohler.path-intellisense",
		"esbenp.prettier-vscode",
		"prisma.prisma",
		"svelte.svelte-vscode",
		"ardenivanov.svelte-intellisense",
		"bradlc.vscode-tailwindcss",
		"visualstudioexptteam.vscodeintellicode",
		"github.copilot",
		"midnightsyntax.vscode-wrap-console-log",
		"tyriar.sort-lines"
	],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [3000],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "npm install",

	// Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "node",
	"features": {
		"docker-from-docker": "latest",
		"git": "latest",
		"github-cli": "latest"
	}
}
